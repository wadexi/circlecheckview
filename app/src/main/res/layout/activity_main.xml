<?xml version="1.0" encoding="utf-8"?>
<views.CustomRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg"
    tools:context="kyvo.circlecheckview.MainActivity">

    <views.CircleCheckView
        android:id="@+id/circleCheckView"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/circleCheckView"
        android:layout_alignRight="@+id/circleCheckView"
        android:layout_alignEnd="@+id/circleCheckView"
        android:layout_alignLeft="@+id/circleCheckView"
        android:layout_alignStart="@+id/circleCheckView"
        style="@style/Widget.AppCompat.SeekBar"
        android:progress="0"
        android:max="100"/>


</views.CustomRelativeLayout>
